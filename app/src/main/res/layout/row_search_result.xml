<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_style_popup"
    android:layout_height="144dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgv_user_photo_sr"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_laundry_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Nama"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgv_user_photo_sr" />

    <RatingBar
        android:id="@+id/rb_laundry_sr"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rating"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_laundry_sr"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_laundry_sr" />

    <TextView
        android:id="@+id/tv_alamat_laundry_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="alamat"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tv_jarak_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="jarak"
        app:layout_constraintStart_toStartOf="@+id/tv_alamat_laundry_sr"
        app:layout_constraintTop_toBottomOf="@+id/tv_alamat_laundry_sr" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="meter"
        app:layout_constraintBottom_toBottomOf="@+id/tv_jarak_sr"
        app:layout_constraintStart_toEndOf="@+id/tv_jarak_sr"
        app:layout_constraintTop_toTopOf="@+id/tv_jarak_sr" />

</android.support.constraint.ConstraintLayout>